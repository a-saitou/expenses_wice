<%= grid(@agreements_grid) do |g|

   g.column name:  'ID'  do |agreement|
    agreement.id
  end

   g.column name:  '略称'   do |agreement|
    agreement.abbreviation
  end

   g.column name:  '名称 ' do |agreement|
    agreement.name
  end

   g.column name:  'CODE'  do |agreement|
    agreement.code
  end
   g.column name:  '着工日'  do |agreement|
    agreement.constraction_date
  end

   g.column name:  '竣工日'   do |agreement|
    agreement.completion_date
  end

   g.column name:  '発注元ID'  do |agreement|
    agreement.orderer_id
  end

  g.column name: 'Agreement Name', attribute: 'name' do |agreement|  # primary table
    link_to(agreement.name, agreement_path(agreement))
  end
  
  g.column name: 'Orderer', attribute: 'name', assoc: :orderer do |orderer|
    orderer.name
 end

   g.column  do |agreement|
    link_to('Edit', edit_agreement_path(agreement))
  end
end -%>